{
  boolean operate=mClient.isAttachedToUser() && (mOperationMode == OperationMode.ON || (mOperationMode == OperationMode.GEOFENCING && mPosition == GeoFencingPosition.HOME || mPosition == GeoFencingPosition.NEAR));
  if (operate) {
    mThermoSimulator.start();
  }
 else {
    mThermoSimulator.stop();
  }
}
