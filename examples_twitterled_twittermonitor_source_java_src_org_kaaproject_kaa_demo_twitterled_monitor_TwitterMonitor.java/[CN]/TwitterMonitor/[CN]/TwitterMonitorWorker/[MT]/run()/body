{
  LOG.info("Starting twitter monitor thread");
  while (!stopped) {
    try {
      monitorUpdates();
    }
 catch (    Exception e) {
      LOG.error("Exception during twitter monitoring",e);
      try {
        Thread.sleep(1000L);
      }
 catch (      InterruptedException ie) {
        LOG.error("Interrupted during recovery timeout",ie);
      }
    }
  }
}
