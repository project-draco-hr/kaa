{
  CTLSchema ctlSchema=null;
  LOG.debug("Searching ctl schema by fqn [{}] and version [{}]",fqn,version);
  if (isNotBlank(fqn) && version != null) {
    ctlSchema=findOneByCriterionWithAlias(CTL_SCHEMA_META_INFO_PROPERTY,CTL_SCHEMA_META_INFO_ALIAS,Restrictions.and(Restrictions.eq(CTL_SCHEMA_META_INFO_ALIAS_VERSION,version),Restrictions.eq(CTL_SCHEMA_META_INFO_ALIAS_FQN,fqn)));
  }
  if (LOG.isTraceEnabled()) {
    LOG.trace("[{},{}] Search result: [{}].",fqn,version,ctlSchema);
  }
 else {
    LOG.debug("[{},{}] Search result: [{}].",fqn,version,ctlSchema != null);
  }
  return ctlSchema;
}
