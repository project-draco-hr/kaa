{
  List<SmartDeviceInfo> devices=new ArrayList<SmartDeviceInfo>();
  Cursor cursor=database.query(DeviceSqlLiteHelper.TABLE_DEVICES,allColumns,null,null,null,null,null);
  cursor.moveToFirst();
  while (!cursor.isAfterLast()) {
    SmartDeviceInfo device=cursorToDevice(cursor);
    devices.add(device);
    cursor.moveToNext();
  }
  cursor.close();
  return devices;
}
