{
  if (line.hasOption("a")) {
    try {
      String appId=line.getOptionValue("a");
      List<? extends HasId> dtos=ThriftDtoConverter.<TopicDto>toDtoList(client.getTopicByAppId(appId));
      writer.println("List of Topics:");
      writer.println();
      for (      HasId dto : dtos) {
        writer.println(dto);
      }
      writer.println();
      writer.println(TOTAL + dtos.size());
      if (line.hasOption("o")) {
        String outFileName=line.getOptionValue("o");
        storeObjectIds(outFileName,dtos,errorWriter);
      }
    }
 catch (    TException e) {
      handleException("Unable to get list of Topics",e,errorWriter);
    }
  }
}
