{
  ControlApiCommand command=new ControlApiCommand("removeTopicFromEndpointGroup","remove Topic from Endpoint Group"){
    @Override public void runCommand(    CommandLine line,    ControlThriftService.Iface client,    PrintWriter writer,    PrintWriter errorWriter){
      removeTopicFromEndpointGroup(line,client,writer,errorWriter);
    }
  }
;
  Option opt=new Option("i",ENDPOINT_GROUP_ID,true,ENDPOINT_GROUP_ID_OPTION);
  opt.setRequired(true);
  command.addOption(opt);
  opt=new Option("t",TOPIC_ID,true,TOPIC_ID_OPTION);
  opt.setRequired(true);
  command.addOption(opt);
  return command;
}
