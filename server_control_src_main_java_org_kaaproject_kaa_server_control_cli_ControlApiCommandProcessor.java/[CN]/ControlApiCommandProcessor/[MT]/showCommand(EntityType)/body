{
  ControlApiCommand command=new ControlApiCommand("show" + type.getName(),"show " + type.getName()){
    @Override public void runCommand(    CommandLine line,    ControlThriftService.Iface client,    PrintWriter writer,    PrintWriter errorWriter){
      show(type,line,client,writer,errorWriter);
    }
  }
;
  Option opt=new Option("i","id",true,type.getName() + ID_OPTION);
  opt.setRequired(true);
  command.addOption(opt);
  return command;
}
