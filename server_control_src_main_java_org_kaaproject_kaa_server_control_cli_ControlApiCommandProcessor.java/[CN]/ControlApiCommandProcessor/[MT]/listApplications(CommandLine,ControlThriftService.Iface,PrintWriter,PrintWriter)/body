{
  if (line.hasOption("t")) {
    try {
      String tentantId=line.getOptionValue("t");
      List<? extends HasId> dtos=ThriftDtoConverter.<ApplicationDto>toDtoList(client.getApplicationsByTenantId(tentantId));
      writer.println("List of Applications:");
      writer.println();
      for (      HasId dto : dtos) {
        writer.println(dto);
      }
      writer.println();
      writer.println("Total: " + dtos.size());
      if (line.hasOption("o")) {
        String outFileName=line.getOptionValue("o");
        storeObjectIds(outFileName,dtos,errorWriter);
      }
    }
 catch (    TException e) {
      handleException("Unable to get list of Applications",e,errorWriter);
    }
  }
}
