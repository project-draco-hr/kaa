{
  if (line.hasOption("a")) {
    try {
      String appId=line.getOptionValue("a");
      List<? extends HasId> dtos=ThriftDtoConverter.<NotificationSchemaDto>toDtoList(client.getNotificationSchemasByAppId(appId));
      writer.println("List of Notification schemas:");
      writer.println();
      for (      HasId dto : dtos) {
        writer.println(dto);
      }
      writer.println();
      writer.println("Total: " + dtos.size());
      if (line.hasOption("o")) {
        String outFileName=line.getOptionValue("o");
        storeObjectIds(outFileName,dtos,errorWriter);
      }
    }
 catch (    TException e) {
      handleException("Unable to get list of Notification Schemas",e,errorWriter);
    }
  }
}
