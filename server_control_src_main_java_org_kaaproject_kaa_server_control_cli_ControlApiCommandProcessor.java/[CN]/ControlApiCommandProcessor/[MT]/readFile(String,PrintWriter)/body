{
  String result=null;
  File f=new File(file);
  if (f.exists() && f.isFile()) {
    try {
      StringBuffer fileData=new StringBuffer();
      BufferedReader reader=new BufferedReader(new FileReader(f));
      char[] buf=new char[1024];
      int numRead=0;
      while ((numRead=reader.read(buf)) != -1) {
        String readData=String.valueOf(buf,0,numRead);
        fileData.append(readData);
      }
      reader.close();
      result=fileData.toString();
    }
 catch (    FileNotFoundException e) {
      errorWriter.println("Unable to locate specified file '" + file + "'!");
    }
catch (    IOException e) {
      errorWriter.println("Unable to read from specified file '" + file + "'! Error: "+ e.getMessage());
      e.printStackTrace(errorWriter);
    }
  }
 else   if (!f.exists()) {
    errorWriter.println("Specified file '" + file + "' does not exists!");
  }
 else   if (!f.isFile()) {
    errorWriter.println("Specified file '" + file + "' is not a file!");
  }
  return result;
}
