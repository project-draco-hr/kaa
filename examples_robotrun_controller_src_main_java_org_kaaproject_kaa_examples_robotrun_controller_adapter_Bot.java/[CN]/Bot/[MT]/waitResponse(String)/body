{
  OperationStatus status=OperationStatus.FAILED;
synchronized (waitSync) {
    waitResponse=c;
    waitStatus=OperationStatus.FAILED;
    try {
      waitSync.wait();
    }
 catch (    InterruptedException e) {
      LOG.error("wait interupted",e);
    }
 finally {
      waitResponse=null;
      status=waitStatus;
      waitStatus=OperationStatus.FAILED;
    }
  }
  return status;
}
