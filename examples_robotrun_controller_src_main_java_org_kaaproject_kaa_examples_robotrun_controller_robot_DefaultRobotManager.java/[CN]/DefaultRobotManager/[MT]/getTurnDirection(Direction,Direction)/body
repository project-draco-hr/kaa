{
  if ((currentDirection == Direction.NORTH && targetDirection == Direction.EAST) || (currentDirection == Direction.EAST && targetDirection == Direction.SOUTH) || (currentDirection == Direction.SOUTH && targetDirection == Direction.WEST)|| (currentDirection == Direction.WEST && targetDirection == Direction.NORTH)) {
    return TurnDirection.RIGHT;
  }
 else {
    return TurnDirection.LEFT;
  }
}
