{
  TypedQuery<User> query=em.createQuery("SELECT u FROM User u WHERE u.username = :usernameOrMail" + " OR u.mail = :usernameOrMail",User.class);
  query.setParameter("usernameOrMail",usernameOrMail);
  List<User> resultList=query.getResultList();
  if (!resultList.isEmpty())   return resultList.get(0);
 else   return null;
}
