{
  if (player == null) {
    if (state.getAlbumId() == null || library.getAlbum(state.getAlbumId()) == null) {
      state.setAlbumId(library.getNext(null));
    }
    player=resetSlideshow(state.getAlbumId());
  }
  if (player != null && player.getStatus() != SlideShowStatus.PLAYING) {
    player.init();
  }
}
