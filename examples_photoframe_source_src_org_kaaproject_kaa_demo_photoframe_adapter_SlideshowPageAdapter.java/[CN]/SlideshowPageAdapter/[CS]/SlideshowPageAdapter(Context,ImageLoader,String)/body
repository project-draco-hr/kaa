{
  mImageLoader=imageLoader;
  mCursor=context.getContentResolver().query(MediaStore.Images.Media.EXTERNAL_CONTENT_URI,new String[]{MediaStore.Images.Media.DATA},MediaStore.Images.Media.BUCKET_ID + "=? ",new String[]{bucketId},null);
  mDataIndex=mCursor.getColumnIndex(MediaStore.MediaColumns.DATA);
  mLayoutInflater=(LayoutInflater)context.getSystemService(Context.LAYOUT_INFLATER_SERVICE);
}
