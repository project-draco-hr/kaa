{
  super(labyrinth);
  this.context=context;
  this.robotPositions=robotPositions;
  if (mainSurface) {
    this.addMouseListener(new MouseAdapter(){
      public void mousePressed(      MouseEvent e){
        if (e.isPopupTrigger())         doPop(e);
      }
      public void mouseReleased(      MouseEvent e){
        if (e.isPopupTrigger())         doPop(e);
      }
      private void doPop(      MouseEvent e){
        ScreenMenu menu=new ScreenMenu();
        menu.show(e.getComponent(),e.getX(),e.getY());
      }
    }
);
  }
 else   if (!fullScreen) {
    this.addMouseListener(new MouseAdapter(){
      public void mouseClicked(      MouseEvent e){
        if (SwingUtilities.isLeftMouseButton(e) && e.getClickCount() == 2) {
          RobotRunSurface surface=new RobotRunSurface(RobotRunSurface.this.context,RobotRunSurface.this.labyrinth,RobotRunSurface.this.robotPositions,false,true);
          showFullScreen(RobotRunSurface.this.context,surface,surface,e);
        }
      }
    }
);
  }
}
