{
  btConnected=false;
  if (reader != null) {
    reader.shutdown();
    reader=null;
  }
  if (writer != null) {
    writer.shutdown();
    writer=null;
  }
  if (getSocket() != null) {
    try {
      getSocket().close();
    }
 catch (    IOException e1) {
      Log.e(TAG,"BT: Error closing socket",e1);
    }
 finally {
      socket=null;
    }
  }
  Log.v(TAG,"BT: disconnected.");
}
