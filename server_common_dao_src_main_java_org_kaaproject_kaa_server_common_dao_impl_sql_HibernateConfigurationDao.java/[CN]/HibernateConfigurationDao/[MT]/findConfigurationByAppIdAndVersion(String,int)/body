{
  Configuration configuration=null;
  LOG.debug("Find configuration by application id {} and major version {}",appId,version);
  if (isNotBlank(appId)) {
    configuration=findOneByCriterionWithAlias(APPLICATION_PROPERTY,APPLICATION_ALIAS,Restrictions.and(Restrictions.eq(APPLICATION_REFERENCE,Long.valueOf(appId)),Restrictions.eq(MAJOR_VERSION_PROPERTY,version),Restrictions.eq(STATUS_PROPERTY,UpdateStatus.ACTIVE)));
  }
  LOG.debug("Found configuration {} by application id {} and major version {}",configuration,appId,version);
  return configuration;
}
