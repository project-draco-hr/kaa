{
  ConfigurationSchema schema=null;
  LOG.debug("Searching configuration schema by application id [{}] and version [{}]",appId,version);
  if (isNotBlank(appId)) {
    schema=findOneByCriterionWithAlias(APPLICATION_PROPERTY,APPLICATION_ALIAS,Restrictions.and(Restrictions.eq(APPLICATION_REFERENCE,Long.valueOf(appId)),Restrictions.eq(MAJOR_VERSION_PROPERTY,version)));
  }
  if (LOG.isTraceEnabled()) {
    LOG.trace("[{},{}] Search result: {}.",appId,version,schema);
  }
 else {
    LOG.debug("[{},{}] Search result: {}.",appId,version,schema != null);
  }
  return schema;
}
