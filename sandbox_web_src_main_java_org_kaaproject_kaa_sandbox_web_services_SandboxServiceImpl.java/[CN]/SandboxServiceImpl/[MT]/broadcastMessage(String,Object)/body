{
  if (uuid != null) {
    AtmosphereResource res=null;
    int waitTime=0;
    while ((res=atmosphereResourceFactory.find(uuid)) == null && waitTime < MESSAGE_BROADCAST_TIMEOUT) {
      try {
        Thread.sleep(500);
      }
 catch (      InterruptedException e) {
      }
      waitTime+=500;
    }
    if (res == null) {
      LOG.warn("Unable to find atmosphere resource for uuid: {}",uuid);
    }
 else {
      res.getBroadcaster().broadcast(message,res);
    }
  }
}
