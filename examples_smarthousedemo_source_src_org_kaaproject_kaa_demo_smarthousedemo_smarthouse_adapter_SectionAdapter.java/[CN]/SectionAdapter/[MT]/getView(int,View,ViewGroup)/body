{
  int sectionIndex=0;
  for (  Section section : this.sections) {
    if (position == 0) {
      return (getHeaderView(section.caption,sectionIndex,convertView,parent));
    }
    int size=section.adapter.getCount() + 1;
    if (position < size) {
      return (section.adapter.getView(position - 1,convertView,parent));
    }
    position-=size;
    sectionIndex++;
  }
  return null;
}
